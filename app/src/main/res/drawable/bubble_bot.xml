<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo del mensaje -->
    <solid android:color="#E0E0E0" /> <!-- Color de fondo del bubble -->

    <!-- Bordes redondeados -->
    <corners android:radius="12dp" />

    <!-- Contorno opcional -->
    <stroke
        android:width="1dp"
        android:color="#BDBDBD" /> <!-- Color de contorno del bubble -->

    <!-- Padding interno opcional -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />

</shape>
